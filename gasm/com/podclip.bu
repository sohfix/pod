    cur = conn.cursor()
    for p in SQL_PRAGMAS:
        cur.execute(p)
    # Create schema if not exists
    cur.executescript(
        """
    CREATE TABLE IF NOT EXISTS feeds (
        short_name TEXT PRIMARY KEY,
